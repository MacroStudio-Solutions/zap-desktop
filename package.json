{
  "name": "zap-desktop",
  "version": "1.0.0",
  "productName": "Zap Desktop",
  "description": "Zap Desktop App",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "zap-desktop",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Zap Desktop - Desinstalar",
      "license": "license.html",
      "allowToChangeInstallationDirectory": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MacroStudio-Solutions/zap-desktop.git"
  },
  "author": "MacroStudio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MacroStudio-Solutions/zap-desktop/issues"
  },
  "homepage": "https://github.com/MacroStudio-Solutions/zap-desktop#readme",
  "devDependencies": {
    "electron": "^18.2.4",
    "electron-builder": "^23.0.3"
  },
  "dependencies": {
    "mkcert": "^1.5.0",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "freeport": "^1.0.5",
    "ip": "^1.1.8",
    "node-delete": "^0.1.2",
    "uuid": "^8.3.2"
  }
}
